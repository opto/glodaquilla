{
	"name": "Glodaquilla",
  "description": "Global Indexing enhancements",
	"version": "0.6",
	"author": "opto",
	"developer": {
		"name": "R Kent James, Klaus Buecher (opto)"
	},
   "default_locale": "en-US",
    "homepage_url": "http://www.mesquilla.com/extensions/glodaquilla",
    "applications": {
        "gecko": {
            "id": "glodaquilla@mesquilla.com",
            "strict_min_version": "78.0"
        }
    },
    "background": {
		"scripts": ["gl-background.js"]
	  },
 "icons": {
        "48": "icon.png"
    },
    "manifest_version": 2,


    "experiment_apis": {
		"WindowListener": {
		  "schema": "content/api/WindowListener/schema.json",
		  "parent": {
			"scopes": ["addon_parent"],
			"paths": [["WindowListener"]],
			"script": "content/api/WindowListener/implementation.js"
		  }
		},  
		"LegacyPrefs": {
		  "schema": "content/api/LegacyPrefs/schema.json",
		  "parent": {
			"scopes": ["addon_parent"],
			"paths": [["LegacyPrefs"]],
			"script": "content/api/LegacyPrefs/implementation.js"
		  
		  }
		},
		"Utilities": {
		  "schema": "content/api/Utilities/schema.json",
		  "parent": {
			"scopes": ["addon_parent"],
			"paths": [["Utilities"]],
			"script": "content/api/Utilities/implementation.js"
		  
		   }
		}
		  }
    
}
